
	<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>
		<div class="row">
			<%= render 'books/list', user: @user, book: @book %>
			<div class="booksdetail col-xs-9">
				<h2>Book detail</h2>

				<table class="table">
					<thead>
					</thead>
					<tbody>
						<% @books.each do |book| %>
						<tr>
							<td><a href="/users/show" class="link hover"><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "noimage.png", size:'40x40' %>
							<br><%= @user.name %></td>
							<td><a href="/books/show" class="link hover"><%= book.title %></a></td>
							<td><%= book.body %></td>
							<% if book.user == current_user %>
								<td><%= link_to "Edit", edit_book_path(book), class: "btn btn-success" %></td>
								<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-danger" %></td>
							<% end %>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	