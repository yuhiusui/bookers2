
	<% if flash[:notice] %>
		<p class="flash"><%= flash[:notice] %></p>
	<% end %>
		<div class="row">
			<div class="urinfo col-xs-3">
				<h2>User info</h2>
					<%= render 'users/info', user: @book_id.user %>
				<h2>New book</h2>
					<%= render 'form', book: @book %>
			</div>
			<div class="booksdetail col-xs-9">
				<h2>Book detail</h2>

				<table class="table">
						<tr>
							<td><%= attachment_image_tag @book_id.user, :profile_image, :fill, 40, 40, fallback: "noimage.png", size:'40x40' %>
							<br><%= link_to @book_id.user.name, user_path(@book_id.user), class: "link hover" %></td>
							<td><%= link_to @book_id.title, book_path(@book_id), class: "link hover" %></td>
							<td><%= render "favorites/favorite", book_id: @book_id %></td>
							<td><%= "コメント数：#{@book.book_comments.count}" %></td>
							<td>
								<% if @book_id.user == current_user %>
									<td><%= link_to "Edit", edit_book_path(@book_id), class: "btn btn-success btn-sm" %></td>
									<td><%= link_to "Destroy", book_path(@book_id), method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-danger btn-sm" %></td>
								<% end %>
							</td>
						</tr>
				</table>

				<table>
						<% @book_comments.each do |book_comment| %>
						<tr>
              <td><%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, fallback: "noimage.png", size:'40x40' %>
              <br><%= link_to book_comment.user.name, user_path(book_comment.id) %></td>
              <td><%= book_comment.created_at.strftime('%Y/%m/%d') %><br>
              	<% if book_comment.user == current_user %>
	              	<%= link_to "Destroy", book_book_comments_path(book_comment.id), method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-danger btn-xs" %>
	            	<% end %></td>
              <td><%= book_comment.comment %></td>
             </tr>
			      <% end %>
				</table>
				<div>
					<%= form_for [@book_id, @book_comment] do |f| %>
					     <%= f.text_area :comment, rows:'5', class: "form-control", placeholder: "コメントをここに" %>
					    <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
					<% end %>
				</div>
			</div>
		</div>