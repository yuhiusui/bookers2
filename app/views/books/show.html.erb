<body>
	<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>
	<div class="container">
		<div class="row">
			<%= render 'books/list', user: @user, book: @book %>
			<div class="booksdetail col-xs-9">
				<h2>Book detail</h2>

				<table class="table">
					<thead>
					</thead>
					<tbody>
						<% @books.each do |book| %>
						<tr>
							<td><a href="/users/show"><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "noimage.png", size:'40x40' %>
							<br><%= @user.name %></a></td>
							<td><%= book.title %></td>
							<td><%= book.body %></td>
							<% if book.user == current_user %>
								<td><%= link_to "edit", edit_book_path(book) %></td>
								<td><%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
							<% end %>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</body>