<h2>Editing Book</h2>
<% if @book.errors.any? %>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<%= form_for(@book) do |f| %>
	<p>Title</p>
	<%= f.text_field :title %>
	<p>Opinion</p>
	<%= f.text_field :body %><br/>
	<%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book) %> | <%= link_to "Back", :books %>
