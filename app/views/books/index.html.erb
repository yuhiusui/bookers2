<body>
	<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>
	<div class="container">
		<%= render 'books/list', user: @user, book: @book %>
		<div class="books">
			<h3>Books</h3>

			<table>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag book, :profile_image, :fill, 60, 60, fallback: "noimage.png" %></td>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</body>