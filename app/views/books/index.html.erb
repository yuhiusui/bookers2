	<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>
		<div class="row">
			<% if @book.errors.any? %>
				<div id="error_explanation">
	   				<h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
					<ul>
						<% @book.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<%= render 'books/list', user: @user, book: @book %>
			<div class="books col-xs-9">
				<h2>Books</h2>

				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
						<tr>
							<%= link_to user_path(book.user_id) do %>
							  <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "noimage.png", size:'40x40' %></td>
							<% end %>
							<td><%= link_to book.title, book_path(book) %></td>
							<td><%= book.body %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	