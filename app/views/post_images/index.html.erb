<body>
	<div class="container">
		<div class="urinfo">
			<h1>User info</h1>
			<img>
			<table>
				<thead>
					<tr>
					<th>name</th>
					<th>introduction</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= @post_image.name %></td>
						<td><%= @post_image.introduction %></td>
					</tr>
				</tbody>
			</table>

			<h3>New book</h3>
			<%= form_for(@book) do |f| %>

				<%= f.label :Title %><br>
				<%= f.text_field :title %><br>

				<%= f.label :Body %><br>
				<%= f.text_area :body %>

				<br><%= f.submit 'Create Book' %>

			<% end %>
		</div><!-- /.urinfo -->
		<div class="otherinfo"></div><!-- /.urbooks -->

	</div><!-- /.container -->
</body>