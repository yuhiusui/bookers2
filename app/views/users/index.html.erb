<body>
	<div class="container">
		<%= render 'users/list', user: @user, book: @book %>
		<div class="otherinfo">
			<table>
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<th><p><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "noimage.png" %></p></th>
						<th><%= user.name %></th>
						<th><%= link_to "Show", user_path(@book) %></th>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div><!-- /.urbooks -->
	</div><!-- /.container -->
</body>