<body>
	<div class="container">
		<div class="urinfo">
			<h1>User info</h1>
			<p><%= @user.profile_image %></p>
			<table>
				<thead>
					<tr>
					<th>name</th>
					<th>introduction</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= @user.name %></td>
						<td><%= @user.introduction %></td>
					</tr>
				</tbody>
			</table>

			<h3>New book</h3>
			<%= form_for(@book) do |f| %>

				<%= f.label :Title %><br>
				<%= f.text_field :title %><br>

				<%= f.label :Opinion %><br>
				<%= f.text_area :body %>

				<br><%= f.submit 'Create Book' %>

			<% end %>
		</div><!-- /.urinfo -->
		<div class="otherinfo">
			<table>
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<th><%= user.profile_image %></th>
						<th><%= user.name %></th>
						<th><%= link_to "Show", user_path(@book) %></th>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div><!-- /.urbooks -->

	</div><!-- /.container -->
</body>