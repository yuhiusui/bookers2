<body>
	<div class="container">
		<div class="row">
			<%= render 'users/list', user: @user, book: @book %>
			<div class="otherinfo col-xs-9">
				<h3>Users</h3>
				<table>
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
						<tr>
							<th><p><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "noimage.png", size:'40' %></p></th>
							<th><%= user.name %></th>
							<th><%= link_to "Show", user_path(user) %></th>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div><!-- /.urbooks -->
		</div>
	</div><!-- /.container -->
</body>