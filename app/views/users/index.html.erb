<div class="row">
	<div class="urinfo col-xs-3">
		<h2>User info</h2>
			<%= render 'users/info', user: @user %>
		<h2>New book</h2>
			<%= render 'books/form', book: @book %>
	</div>
	<div class="otherinfo col-xs-9">
		<h2>Users</h2>
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<th><p><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "noimage.png", size:'40' %></p></th>
					<th><%= user.name %></th>
					<th><%= "フォロー数#{user.followings.count}" %></th>
					<th><%= "フォロワー数#{user.followers.count}" %></th>
					<th></th>
					<th><%= link_to "Show", user_path(user) %></th>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div><!-- /.urbooks -->
</div>
