<body>
	<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>

	<div class="container">
		<%= render 'users/list', user: @user, book: @book %>
		<div class="urbooks">
			<h3>Books</h3>

			<table>
				<thead>
					<tr>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= link_to "book.title", book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div><!-- /.urbooks -->

	</div><!-- /.container -->
</body>