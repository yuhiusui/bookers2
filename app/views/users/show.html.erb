<body>
	<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>

	<div class="container">
		<div class="row">
			<%= render 'users/list', user: @user, book: @book %>
			<div class="urbooks">
				<h2>Books</h2>

				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag book, :profile_image, :fill, 40, 40, fallback: "noimage.png", size:'40x40' %></td>
							<td><%= link_to book.title, book_path(book) %></td>
							<td><%= book.body %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div><!-- /.urbooks -->
		</div>
	</div><!-- /.container -->
</body>