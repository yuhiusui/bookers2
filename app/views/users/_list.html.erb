<div class="urinfo col-xs-3">
	<h1>User info</h1>
	<p><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "noimage.png", size:'100x100' %></p>
	<table>
		<thead>
			<tr>
			<th>name</th>
			<th>introduction</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><%= user.name %></td>
				<td><%= user.introduction %></td>
			</tr>
		</tbody>
	</table>

	<p><%= link_to "", edit_user_path(user), class: "btn btn-default glyphicon glyphicon-wrench" %></p>

	<h3>New book</h3>
	<%= form_for(book) do |f| %>

		<%= f.label :Title %><br>
		<%= f.text_field :title %><br>

		<%= f.label :Opinion %><br>
		<%= f.text_area :body %>

		<br><%= f.submit 'Create Book' %>

	<% end %>
</div><!-- /.urinfo -->